// .eslintrc
{
    "parser": "@typescript-eslint/parser",
    "parserOptions": {
      "ecmaVersion": 12,
      "sourceType": "module"
    },
    "plugins": ["@typescript-eslint"],
    // HERE
    "extends": [
      "eslint:recommended",
      "plugin:@typescript-eslint/recommended",
      "prettier"
    ],
  
    "rules": {
      "no-unused-vars": "error",
      "prefer-const": "error",
      // "no-console": "error",
      "no-undef": "error",
      "no-unused-expressions": "error",
      // " @typescript-eslint/consistent-type-definitions": ["error", "type"]
    },
  
    "env": {
      "browser": true,
      "es2021": true,
      "node": true
    },
    "globals": {
      "process": "readonly"
    }
  }
  